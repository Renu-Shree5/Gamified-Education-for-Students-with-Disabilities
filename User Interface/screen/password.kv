# Kv file for SetPasswordScreen
<SetPasswordScreen>:
    FloatLayout:
        canvas:
            Rectangle:
                source: 'image\signin.jpg'  # Set the path to your image file
                size: self.width, self.height  # Set the size to match the screen size
                pos: self.x, self.y  # Position the image at the bottom-left corner to cover the entire screen
        MDLabel:
            text: 'NeuroNex'
            font_style: 'Subtitle1'
            italic: True  # Italicize the text 
            font_size: 60
            halign: 'center'
            theme_text_color: "Custom"
            text_color: "#FFFFFF"
            size_hint_y: None
            height: self.texture_size[1]
            pos_hint: {"center_x": .5, "top": 0.90}  # Position at the top of the page
    MDCard:
        size_hint: None,None
        size: 500,500
        pos_hint: {"center_x":.5,"center_y":.5}
        md_bg_color: [153/255, 50/255, 204/255, 1]
        padding: 20
        spacing: 30
        orientation: 'vertical'
        # Adding item to the card
        MDLabel:
            text: 'Set Password'
            font_style:'Button'
            font_size:40
            halign:'center'
            theme_text_color: "Custom"
            text_color: "#FFFFFF"
            size_hint_y:None
            height:self.texture_size[1]
        MDTextField:
            id: new_password_input
            hint_text: "New Password"
            password: True
            size_hint_x: None
            width: 400
            font_size: 25
            theme_text_color: "Custom"
            text_color: "#FFFFFF"
            pos_hint: {"center_x": .5, "center_y": .3}
            background_color: [1, 1, 1, 0]
        MDTextField:
            id: confirm_password_input
            hint_text: "Confirm Password"
            password: True
            size_hint_x: None
            width: 400
            font_size: 25
            theme_text_color: "Custom"
            text_color: "#FFFFFF"
            pos_hint: {"center_x": .5, "center_y": .3}
            background_color: [1, 1, 1, 0]
        Button:
            text: "Set Password"
            on_press: app.set_password()
            size_hint: None, None
            size: 200, 50
            pos_hint: {"center_x": .5}

        MDLabel:
            id: registration_message
            text: ''
            halign: 'center'
            theme_text_color: "Custom"
            text_color: "#FFFFFF"